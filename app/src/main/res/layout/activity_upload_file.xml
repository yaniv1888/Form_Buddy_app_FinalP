<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medicalbackg">

    <TextView
        android:id="@+id/uploadtext_text"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="690dp"
        android:text="העלאת קבצים"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/service_text"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="641dp"
        android:text="בחר את השירות המבוקש:"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button

        android:id="@+id/select_from_gallery"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="236dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="573dp"
        android:background="@drawable/buttonback"
        android:text="בחר מגלריה"
        android:textColor="#fff"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/gallery_file_name"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"

        android:layout_marginTop="123dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="578dp"
        android:layout_weight="8"
        android:padding="5dp"
        android:text="לא נבחרה תמונה"
        android:textStyle="bold" />


    <Button
        android:id="@+id/select_from_camera"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="234dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="457dp"
        android:background="@drawable/buttonback"
        android:text="צלם תמונה"
        android:textColor="#fff"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/camera_file_name"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="448dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="לא הועלתה תמונה"
        android:textStyle="bold" />

    <Button
        android:id="@+id/select_from_all_files"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="234dp"
        android:layout_marginTop="345dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="339dp"
        android:background="@drawable/buttonback"
        android:text="בחר מקבצים"
        android:textColor="#fff"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/all_file_name"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="345dp"
        android:layout_weight="8"
        android:padding="5dp"
        android:text="לא הועלה קובץ"
        android:textStyle="bold" />

    <Button
        android:id="@+id/upload2"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/buttonback"
        android:text="העלאת קבצים" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressbar"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <Button
        android:textColor="#fff"
        android:id="@+id/previous_buttonUp"
        android:layout_width="105dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/buttonback"
        android:text="הקודם"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/gallery_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="567dp" />

    <ImageView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="440dp" />



</RelativeLayout>